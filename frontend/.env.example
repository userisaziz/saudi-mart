# API Configuration
VITE_API_BASE_URL=https://api.yourdomain.com/api
VITE_API_VERSION=v1

# Environment
VITE_NODE_ENV=production

# Application Configuration
VITE_APP_NAME=Saudi B2B CRM
VITE_APP_VERSION=1.0.0
VITE_APP_URL=https://yourapp.vercel.app

# Authentication
VITE_JWT_SECRET_KEY=your-super-secure-jwt-secret-key-here
VITE_REFRESH_TOKEN_KEY=your-refresh-token-key-here
VITE_SESSION_TIMEOUT=3600000

# External Services
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key
VITE_STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
VITE_SENTRY_DSN=https://your-sentry-dsn

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PAYMENT_GATEWAY=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_DARK_MODE=true

# Saudi Specific Configuration
VITE_DEFAULT_CURRENCY=SAR
VITE_DEFAULT_LOCALE=en-SA
VITE_ARABIC_SUPPORT=true
VITE_HIJRI_CALENDAR=true

# File Upload Configuration
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif,application/pdf,application/doc,application/docx

# Contact Information
VITE_SUPPORT_EMAIL=support@yourdomain.com
VITE_SUPPORT_PHONE=+966123456789
VITE_COMPANY_ADDRESS=Riyadh, Saudi Arabia

# Social Media (Optional)
VITE_FACEBOOK_URL=https://facebook.com/yourcompany
VITE_TWITTER_URL=https://twitter.com/yourcompany
VITE_LINKEDIN_URL=https://linkedin.com/company/yourcompany

# Development/Debug (Set to false in production)
VITE_DEBUG=false
VITE_LOG_LEVEL=error

# Security
VITE_ENABLE_CSP=true
VITE_ENABLE_HTTPS_ONLY=true